<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.wifiguard.ui.DeviceTableView">
  <top>
    <ToolBar>
      <Label text="WifiGuard" />
      <Pane prefWidth="18"/>
      <Label text="Host:"/><TextField fx:id="hostField" promptText="127.0.0.1" prefWidth="120"/>
      <Label text="Port:"/><TextField fx:id="portField" promptText="5000" prefWidth="70"/>
      <CheckBox text="TLS" fx:id="tlsToggle"/>
      <Button text="Connect" onAction="#onConnect"/>
      <Pane prefWidth="18"/>
      <Button text="Refresh" onAction="#onRefresh"/>
      <Button text="Add Allowlist" onAction="#onAdd"/>
      <Pane prefWidth="18"/>
      <Button text="Quit" onAction="#onQuit"/>
    </ToolBar>
  </top>

  <center>
    <TableView fx:id="table" prefHeight="420">
      <columns>
        <TableColumn fx:id="colIp" text="IP" prefWidth="160"/>
        <TableColumn fx:id="colMac" text="MAC" prefWidth="180"/>
        <TableColumn fx:id="colName" text="Name" prefWidth="200"/>
        <TableColumn fx:id="colKnown" text="Known" prefWidth="90"/>
        <TableColumn fx:id="colLast" text="Last Seen" prefWidth="160"/>
      </columns>
    </TableView>
  </center>

  <bottom>
    <HBox spacing="10" styleClass="statusBar">
      <Label text="Status:"/>
      <Label fx:id="statusLabel" text="Ready"/>
    </HBox>
  </bottom>
</BorderPane>